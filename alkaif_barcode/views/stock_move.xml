<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="view_picking_form_inherit_form" model="ir.ui.view">
            <field name="name">view.picking.inherit.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='product_id']" position="before">
                    <field name="barcode_id" options="{'no_create': True}"/>
                </xpath>

                <!--<xpath expr="//notebook/page/field[@name='move_ids_without_package']/tree/field[@name='product_id']" position="before">
                    <field name ="barcode_scan"/>
                </xpath>-->

            </field>
        </record>


    </data>
</odoo>